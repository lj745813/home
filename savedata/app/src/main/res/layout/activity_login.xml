<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_user"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="用户名"
                android:textSize="25dp"
                tools:ignore="MissingConstraints,RtlHardcoded"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="55dp" />

            <EditText
                android:id="@+id/text_int"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="20px"
                android:gravity="left"
                app:layout_constraintStart_toEndOf="@+id/text_user"
                tools:ignore="MissingConstraints,RtlHardcoded"
                tools:layout_editor_absoluteY="55dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_pwd"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:text="密码"
                app:layout_constraintTop_toBottomOf="@+id/text_user"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="75dp" />

            <EditText
                android:id="@+id/text_int2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="20px"
                android:layout_marginStart="20dp"
                android:gravity="left"
                app:layout_constraintStart_toEndOf="@+id/text_pwd"
                app:layout_constraintTop_toBottomOf="@+id/text_int"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/login"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@+id/text_pwd"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="91dp" />

            <Button
                android:id="@+id/reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:text="注册"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/login" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
